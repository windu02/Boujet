<div class="row-fluid"> 
    <div class="page-header">
        <h1><%= t('item') %> <small><%= t('editrecording') %></small></h1>
    </div>
</div>
                        
<div class="row-fluid">
      <div class="span12">
           <%= form_for(@item, :url => url_for(:controller => "items", :action => "update", :depositorid => @depositor.id, :itemid => @item.id ), :method => :post, :html => {:class => "form-horizontal"}) do |f| %>
                  
                   <%= render :partial => "items/itemform", :locals => { :f => f } %>
                  
                   <div class="control-group">
                        <div class="controls">
                             <%= f.submit t('save'), :class => "btn btn-primary btn-large" %>
                        </div>
                   </div>
         <% end %>
      </div>
 </div>
