<div class="row-fluid"> 
    <div class="page-header">
        <h1><%= t('depositor') %> <small><%= t('editrecording') %></small></h1>
    </div>
</div>
                        
<div class="row-fluid">
      <div class="span12">
           <%= form_for(@depositor, :url => url_for(:controller => "depositors", :action => "update", :depositorid => @depositor.id), :method => :post, :html => {:class => "form-horizontal"}) do |f| %>
                  
                   <%= render :partial => "depositors/depositorform", :locals => { :f => f } %>
                  
                   <div class="control-group">
                        <div class="controls">
                             <%= f.submit t('save'), :class => "btn btn-primary btn-large" %>
                        </div>
                   </div>
         <% end %>
      </div>
 </div>
