<div class="row">
	<div class="span6 offset3">
		<div class="hero-unit">
			<h2>Boujet</h2>
			<p><%= t('welcomesentence') %></p>

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
				<%= field_set_tag("Connexion") do %>
					<div class="control-group">
						<%= f.label :email, t('email'), :class => "control-label" %>
						<div class="controls">
							<%= f.text_field :email, :class => "input-large" %>
						</div>
					</div>
	
					<div class="control-group">
						<%= f.label :password, t('password'), :class => "control-label" %>
						<div class="controls">
							<%= f.password_field :password, :class => "input-large" %>
						</div>
					</div>
	
					<% if devise_mapping.rememberable? -%>
					<div class="control-group">
						<div class="controls">
							<label class="checkbox">
	    						<%= f.check_box :remember_me %> <%= t('rememberme') %>
							</label>
						</div>
					</div>
					<% end -%>
	
					<div class="control-group">
						<div class="controls">
							<%= f.submit t('signin'), :class => "btn btn-primary btn-large" %>
						</div>
					</div>
				<% end %>
			<% end %>
         
		</div><!--/row-->
	</div><!--/span6-->
</div><!--/row-->